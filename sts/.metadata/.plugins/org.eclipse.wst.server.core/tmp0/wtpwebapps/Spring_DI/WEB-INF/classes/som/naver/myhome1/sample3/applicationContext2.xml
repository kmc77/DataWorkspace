<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	해당 패키지에서 New -> Other -> Spring Bean Configuration File -> Next
	-> applicationContext 입력 -> Next -> beans 클릭 -> Finish
 -->
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- 
    	bean 생성합니다.
    	
    	1. scope="singleton" : 기본값이 싱글톤입니다.
    							해당 bean이 단 하나만 생성되어 운용됩니다.
    	2. scope="prototype" : bean이 요청될 때마다 매번 새로운 객체를 생성하여 반환합니다.						
     -->

  <bean id="m" class="som.naver.myhome1.sample3.MessageBeanEn"
  		scope="singleton"/>
  
  <bean id="m1" class="som.naver.myhome1.sample3.MessageBeanKo"
  		scope="prototype"/>
  
</beans>
