<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	해당 패키지에서 New -> Other -> Spring Bean Configuration File -> Next
	-> applicationContext 입력 -> Next -> beans 클릭 -> Finish
 -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<!--
		destroy-method 속성은 스프링 컨테이너가 객체를 삭제하기 직전에 호출될
		임의의 메서드를 지정할 수 있습니다.
	 -->
	 <bean id="m" class="com.naver.myhome2.sample1.MessageBeanEn"
	 				destroy-method = "destroyMethod"/>
	 				
	 <!-- init-method 속성에서 정의한 메서드는 class 속성에 설정된 클래스를
	 			객체 생성한 후에 호출합니다. -->				
	<bean id="m2" class="com.naver.myhome2.sample1.MessageMultiple"
					init-method="initMethod">
		<property name="bean">
			<ref = bean="m"/>
		</property>			
	</bean>		
			
</beans>